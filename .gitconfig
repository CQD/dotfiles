[core]
	excludesfile = ~/.gitignore_global

[user]
        email = wesleyliao@kkbox.com
        name = CQD

[color]
        ui = auto
        status = auto
        branch = auto

[alias]
        ci = commit
        co = checkout
        di = diff
        din = diff --name-only
        dist = diff --stat
        dicw = diff --color-words
        st = status
        sh = show
        shn = show --name-only
        br = branch
        co = checkout
        rb = rebase
        cp = cherry-pick
        lg = log --graph --pretty=ol  --abbrev-commit --date=local
        lga = log --graph --pretty=ol --abbrev-commit --date=local --all

[branch]
        autosetuprebase = always

[branch "master"]
        rebase = true

[pretty]
        ol = format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %C(bold black)- %cn %Creset%Cgreen(%cr)%Creset'
